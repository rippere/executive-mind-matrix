# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.py text eol=lf diff=python
*.pyi text eol=lf diff=python
*.pyx text eol=lf
*.pxd text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Web files
*.html text eol=lf diff=html
*.css text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# Documentation
*.md text eol=lf diff=markdown
*.txt text eol=lf
*.rst text eol=lf
*.adoc text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitmodules text eol=lf
.gitkeep text eol=lf

# CI/CD
.github/** text eol=lf
.gitlab-ci.yml text eol=lf
.travis.yml text eol=lf
Jenkinsfile text eol=lf

# Python specific merge strategies
requirements*.txt text eol=lf merge=union
*.lock text eol=lf merge=binary

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Treat these files as generated
*.log binary
*.pickle binary
*.pkl binary
*.npy binary
*.npz binary

# Linguist overrides (for GitHub language detection)
*.py linguist-language=Python
*.ipynb linguist-language=Python
docs/** linguist-documentation
tests/** linguist-vendored=false

# Export ignore (files not included in git archive)
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
tests/ export-ignore
docs/ export-ignore
*.md export-ignore
.editorconfig export-ignore
.pre-commit-config.yaml export-ignore
